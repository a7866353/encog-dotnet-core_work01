<Window x:Class="MyProject01.Win.DataBaseViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DataBaseViewer" Height="720" Width="1280">
    <Grid>
        <Button Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0"/>
        <Button Name="UpdateButton" Content="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="90,10,0,0"/>
        <StackPanel Name="MainStackPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Vertical" Margin="10,40,10,10" >
            <DataGrid Name="TestCaseDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
            <DataGrid Name="EpisodeDataGrid" HorizontalAlignment="Stretch"  VerticalAlignment="Top" />
        </StackPanel>

    </Grid>
</Window>
